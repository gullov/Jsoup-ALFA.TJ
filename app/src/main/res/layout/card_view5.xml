<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="120dp"
        android:id="@+id/action_bar_spinner"
        android:layout_margin="8dp"
        android:layout_height="90dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:id="@+id/image"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/action_bar_spinner"
        android:id="@+id/rela1"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_toRightOf="@+id/image2"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/dops"
                android:text="вДудь"
                android:textColor="#212121"
                android:textStyle="bold"
                android:id="@+id/description"
                android:textSize="13dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/description"
                android:id="@+id/nameOfChannel"
                android:singleLine="true"
                android:textColor="#757575"
                android:text="6 тыс. подписчиков "
                android:textSize="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/nameOfChannel"
                android:id="@+id/dops2"
                android:textColor="#757575"
                android:textSize="10dp"
                android:text="98 видео"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ПОДПИСАТЬСЯ"
                android:layout_below="@+id/dops2"
                android:textSize="14dp"
                android:id="@+id/subscribe"
                android:textColor="#D50000"/>

        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>