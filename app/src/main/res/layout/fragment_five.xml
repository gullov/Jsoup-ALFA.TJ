<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/entered"
    android:visibility="gone"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:visibility="visible"
        android:layout_width="match_parent"
        app:elevation="0dp"
        android:layout_height="269dp"
        android:theme="@style/AppTheme.AppBarOverlay">



        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layouts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="#FFF"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@+id/toolbar">






            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginTop="156dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:layout_width="match_parent"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    android:id="@+id/rela"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#202124"
                        android:textSize="28sp"
                        android:id="@+id/text"
                        android:textAllCaps="true"
                        android:text="@string/planeta"
                        android:layout_above="@+id/lay"
                        android:layout_marginBottom="7dp"
                        android:fontFamily="@font/googlesans_medium"
                        android:layout_centerHorizontal="true"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:id="@+id/lay"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:background="@drawable/qr_bg"
                        android:layout_height="26dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="my mail"
                            android:textColor="#5f6368"
                            android:textSize="14sp"
                            android:id="@+id/email"
                            android:layout_centerVertical="true"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                </RelativeLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/relajon"
                app:layout_collapseMode="parallax"
                android:layout_marginTop="56dp"
                app:layout_collapseParallaxMultiplier="0.54"
                android:layout_height="142dp">

                <RelativeLayout
                    android:layout_width="84dp"
                    android:layout_height="84dp"
                    android:layout_centerHorizontal="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/play"
                    android:background="@drawable/circle_button">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/firstWord"/>
                </RelativeLayout>

            </RelativeLayout>


            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planeta"
                    android:textColor="#202124"
                    android:fontFamily="@font/googlesans_medium"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_toLeftOf="@+id/more"
                        android:id="@+id/edit"
                        app:srcCompat="@drawable/ic_mode_edit_black_24dp"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        />

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/ic_exit_to_app_black_24dp"
                        android:tint="#575757"
                        android:id="@+id/more"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="12dp"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>



        </com.google.android.material.appbar.CollapsingToolbarLayout>




    </com.google.android.material.appbar.AppBarLayout>


    <include layout="@layout/content_scrolling" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/enter"
        android:visibility="visible"
        android:screenOrientation="portrait"
        tools:context=".MainActivity">



        <TextView
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:text="MIX.TJ"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            android:textColor="#2c2c2c"
            android:layout_above="@+id/username"
            android:fontFamily="@font/googlesans_medium"
            />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/et_bg"
            android:hint="Электронный адрес"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="#000"
            android:layout_above="@+id/password"
            android:textSize="13sp"
            android:paddingStart="20dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:paddingEnd="16dp"
            />









        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/et_bg"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:textColor="#000"
            android:textSize="13sp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"

            android:paddingStart="20dp"
            android:paddingEnd="16dp"/>




        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/password"
            android:background="@drawable/btn_bg"
            android:onClick="login"
            android:text="Вход"
            android:textSize="13dp"
            android:textAllCaps="false"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:textColor="#FFF"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_login"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="24dp"
            android:id="@+id/forgot_password">



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Получить помощь со входом"
                android:textColor="#000"
                android:layout_marginLeft="2sp"
                android:layout_toEndOf="@+id/forgot_password2"
                android:textSize="11sp"
                android:singleLine="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgot_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Забыли свои учетные данные?"
                android:onClick="ForgotPassword"
                android:textColor="#000"
                android:textSize="11sp"/>



        </RelativeLayout>


        <View
            android:id="@+id/footer_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="45dp"
            android:background="#e0e0e0"/>



        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text11"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:textAlignment="center"
                android:gravity="center"
                android:text="Instagramm: @lumies"
                android:fontFamily="@font/googlesans_medium"
                android:textSize="11sp"/>



        </LinearLayout>


        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_toStartOf="@+id/or"
            android:layout_height="1dp"
            android:background="#e0e0e0"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/forgot_password"
            android:layout_marginTop="40dp" />

        <TextView
            android:id="@+id/or"
            android:layout_width="wrap_content"
            android:layout_below="@+id/forgot_password"
            android:layout_centerHorizontal="true"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="или"
            android:textAllCaps="true"
            android:textSize="13sp" />

        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_below="@+id/forgot_password"
            android:layout_toEndOf="@+id/or"
            android:layout_marginTop="40dp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="15dp"
            android:layout_height="1dp"
            android:background="#e0e0e0"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registr"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/or"
            android:onClick="goToRegister">

            <TextView
                android:id="@+id/text111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="У вас еще нет аккаунта? "
                android:textSize="11sp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:textStyle="bold"
                android:text="Зарегистрируйтесь."
                android:textSize="11sp"
                android:layout_toEndOf="@+id/text111"/>


        </RelativeLayout>



    </RelativeLayout>



</RelativeLayout>